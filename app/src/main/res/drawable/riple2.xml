<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#01BBF3">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F4F4F3" />
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:left="-4dp"
        android:right="0dp"
        android:top="0dp">
        <shape>
            <stroke
                android:width="4dp"
                android:color="#000000" />
        </shape>
    </item>
</ripple>